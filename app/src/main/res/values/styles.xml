<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BigHeaderText">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_big_header</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_very_small</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="TitleTextBlack" parent="TitleText">
        <item name="android:textColor">@color/black_universal</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="RegularTextBlue" parent="RegularText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="RegularTextBlack" parent="RegularText">
        <item name="android:textColor">@color/black_universal</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">@font/roboto_slab_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_main</item>
    </style>

    <style name="MediumTextWhite" parent="MediumText">
        <item name="android:textColor">@color/white_universal</item>
    </style>

    <style name="SearchEditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/padding_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/rectangle_with_corners</item>
        <item name="android:backgroundTint">@color/light_gray_gray</item>
        <item name="android:drawablePadding">@dimen/padding_horizontal</item>
        <item name="android:drawableTint">@color/black_universal</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textColorHint">@color/gray_white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

</resources>